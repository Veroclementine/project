{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Inscription</h1>

    {{ form_start(form) }}

        {{ form_row(form.username, {'label': "Nom d'utilisateur :", 'attr':{
            'placeholder':"Votre nom d'utilisateur..."
        }} ) }}
        {{ form_row(form.firstname, {'label': "Votre Prénom :", 'attr':{
            'placeholder':"Votre prénom..."
        }}) }}
        {{ form_row(form.lastname, {'label': "Votre Nom :", 'attr':{
            'placeholder':"Votre nom..."
        }} ) }}
        {{ form_row(form.email, {'label': "Nom email :", 'attr':{
            'placeholder':"Votre email..."
        }} ) }}
        {{ form_row(form.password, {'label': "Votre mot de passe :", 'attr':{
            'placeholder':"Votre mot de passe..."
        }}) }}
        {{ form_row(form.passwordConfirm, {'label': "Confirmer votre mot de passe :", 'attr':{
            'placeholder':"Confirmation votre mot de passe..."
        }}) }}
      <button type="button" class="btn btn-success">S'inscrire</button>
    {{ form_end(form) }}

</div>
{% endblock %}


